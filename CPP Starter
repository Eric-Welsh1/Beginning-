#include <iostream>
#include <fstream>
#include <string>

using namespace std;

void readArray(string [], int);
void sortArray();


//main function
int main()
{
	
	
	//tell user what program does
	cout << "This program will allow you to search for";
	cout << "names on a roster read from a file\n\n\n";
	cout << "-----------------------------------------------------\n\n";
	
	readArray(string duplicate[]);
	
	sortArray(string names[], int size);
	
	
	
	
	system ("pause");
	return 0;
}
//end of main function


//Start of reading and duplicating array
void readArray()
{
	string duplicate[45];
	string myRoster[45];

	ifstream file("roster.txt");
    if(file.is_open())
    {
        for(int i = 0; i < 45; ++i)
        {
            file >> myRoster[i];
        }
    }
    

    for(int a = 0; a < 45; ++a)
    {
    	myRoster[a] = duplicate[a];
	}
    
}
//end of reading and duplicating an array


//start of sorting 
void sortArray()
{
	 int first = 0,           
     int last = size - 1,       
     int middle,            
     int position = -1;         
    bool found = false;        

    while (!found && first <= last)
    {
        middle = (first + last) / 2;    
        if (names[middle] == value)      
        {
            found = true;
            position = middle;
        }
        else if (names[middle] > value)  
            last = middle - 1;
        else
            first = middle + 1;           
    }
    return position;
}
// end of sorting
